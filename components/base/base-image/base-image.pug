.base-image(v-if='loaded')
  picture(v-waypoint="{ active: true, callback: onWaypoint, options: intersectionOptions }")
    source(:srcset='currWebP' type='image/webp')
    source(:srcset='currJp2' type='image/jp2')
    img.base-image__image(:src='currentImg', :alt='alt')
  transition(name='fade-src-img')
    .base-image__overlay(:style="{ backgroundColor: bgColor }" v-if='loading')
      svg.base-image__spinner(width='30px' height='30px' viewBox='0 0 66 66')
        circle.base-image__ring(cx='33' cy='33' r='30')
