.base-image(
  v-if='loaded'
  role='img'
  :aria-label='alt'
  :style="{ backgroundImage: currentImg ? 'url(' + currentImg + ')' : '', flexShrink: '0', position: imageType }"
  v-waypoint="{ active: true, callback: onWaypoint, options: intersectionOptions }")
  .base-image__overlay(:style="{ backgroundColor: bgColor, position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', width: '100%', height: '100%' }" v-if='loading')
  img.base-image__image.sr-only(
    :src='currentImg'
    :alt='alt')
