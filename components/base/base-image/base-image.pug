.base-image(v-if='loaded' role='img', :aria-label='alt', :style="{ backgroundImage: currentImg ? 'url(' + currentImg + ')' : '', flexShrink: '0', position: imageType }" v-waypoint="{ active: true, callback: onWaypoint, options: intersectionOptions }")
  transition(name='fade-src-img')
    .base-image__overlay(:style="{ backgroundColor: bgColor }" v-if='loading')
      svg.base-image__spinner(width='30px' height='30px' viewBox='0 0 66 66')
        circle.base-image__ring(cx='33' cy='33' r='30')
  img.base-image__image.sr-only(:src='currentImg', :alt='alt')
