section.custom-transition-help(v-if='props' :class='[ `custom-transition-help--padding-${props.padding}` ]')
  .custom-transition-help__container
    .custom-transition-help__column
      .custom-transition-help__header(v-html='props.header' ref='header')
      .custom-transition-help__content
        .custom-transition-help__list(v-for='(item, i) in props.help', :key='`help-${i}`' , v-html='item.text' ref='items')
        .custom-transition-help__body(ref='body' v-html='props.body')
